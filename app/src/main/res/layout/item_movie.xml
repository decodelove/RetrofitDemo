<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:rating_bar="http://schemas.android.com/apk/res/android/com.google.retrofitdemo.view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_iv_poster"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="120dp"
        android:src="@mipmap/movie_item_name" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="120dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_film_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="肖申克的救赎"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:orientation="horizontal">

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="评分："/>

            <TextView
                android:id="@+id/item_movie_grade"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="5"
                android:text="9.6"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:text="导演："/>
            <TextView
                android:id="@+id/item_movie_direct"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="佛兰克-德拉邦特"/>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:text="演员："/>
            <TextView
                android:id="@+id/item_movie_actor"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="莫妮卡/克拉拉/斯嘉丽约翰逊"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>